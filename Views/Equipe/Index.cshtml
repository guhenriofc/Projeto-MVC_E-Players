@model Equipe
@{
    //Alterando o titulo da pagina
    ViewData["Title"] = "Equipes";
}

@* Para enviar informações para um formulario se utiliza o metodo POST *@
@* action -> ação a ser executada *@

@* Formulario a ser preenchido *@
<form method="POST" action='@Url.Action("Cadastrar")'>
    <label>ID</label>
    <input type="text" name="IdEquipe" />

    <label>Nome</label>
    <input type="text" name="Nome" />

    <label>Imagem</label>
    <input type="text" name="Imagem" />
    
    <button type="submit">Cadastrar</button>
</form>

<table class="table table-stripes table-responsive">
    @* Cabeçalho da tabela *@
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Foto</th>
    </thead>
    @* Corpo da tabela *@
    <tbody>
        @foreach (Equipe equipe in ViewBag.Equipes)
        {
            <tr>
                <td>@equipe.IdEquipe</td>
                <td>@equipe.Nome</td>
                <td>@equipe.Imagem</td>
            </tr>
        }
    </tbody>
</table>